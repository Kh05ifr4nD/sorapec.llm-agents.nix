{
  "$schema": "https://opencode.ai/config.json",
  "model": "openai/gpt-5.2",
  "small_model": "openai/gpt-5.1-codex-max",
  "default_agent": "Sisyphus",
  "enabled_providers": ["openai", "google", "anthropic"],
  "share": "disabled",
  "provider": {
    "openai": {
      "options": {
        "baseURL": "http://localhost:13500/v1"
      },
      "models": {
        "gpt-5.2": {
          "id": "gpt-5.2",
          "name": "GPT-5.2",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "variants": {
            "low": {
              "include": ["reasoning.encrypted_content"],
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "high",
              "store": false
            },
            "medium": {
              "include": ["reasoning.encrypted_content"],
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "high",
              "store": false
            },
            "high": {
              "include": ["reasoning.encrypted_content"],
              "reasoningEffort": "high",
              "reasoningSummary": "auto",
              "textVerbosity": "high",
              "store": false
            },
            "xhigh": {
              "include": ["reasoning.encrypted_content"],
              "reasoningEffort": "xhigh",
              "reasoningSummary": "auto",
              "textVerbosity": "high",
              "store": false
            }
          },
          "options": {
            "include": ["reasoning.encrypted_content"],
            "reasoningEffort": "xhigh",
            "reasoningSummary": "auto",
            "textVerbosity": "high",
            "store": false
          }
        },
        "gpt-5.1-codex-max": {
          "id": "gpt-5.1-codex-max",
          "name": "GPT-5.1 Codex Max",
          "options": {
            "textVerbosity": "high",
            "include": ["reasoning.encrypted_content"],
            "reasoningEffort": "high",
            "reasoningSummary": "auto",
            "store": false
          }
        }
      }
    },
    "google": {
      "options": {
        "baseURL": "http://localhost:13500/v1beta"
      },
      "models": {
        "gemini-3-flash-preview": {
          "id": "gemini-3-flash-preview",
          "name": "Gemini 3 Flash Preview",
          "options": {
            "thinkingConfig": {
              "thinkingLevel": "high",
              "includeThoughts": true
            }
          }
        },
        "gemini-3-pro-preview": {
          "id": "gemini-3-pro-preview",
          "name": "Gemini 3 Pro Preview",
          "options": {
            "thinkingConfig": {
              "thinkingLevel": "high",
              "includeThoughts": true
            }
          }
        }
      }
    },
    "anthropic": {
      "options": {
        "baseURL": "http://localhost:13500/v1"
      },
      "models": {
        "claude-opus-4-5": {
          "id": "claude-opus-4-5",
          "name": "Claude Opus 4.5",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 32000
            }
          }
        }
      }
    }
  },
  "permission": {
    "bash": "allow",
    "external_directory": "ask"
  },
  "watcher": {
    "ignore": [
      "**/.git/**",
      "**/.direnv/**",
      "**/.opencode/**",
      "**/.cache/**",
      "**/node_modules/**",
      "**/.pnpm-store/**",
      "**/.yarn/**",
      "**/.venv/**",
      "**/__pycache__/**",
      "**/.pytest_cache/**",
      "**/dist/**",
      "**/build/**",
      "**/.next/**",
      "**/out/**",
      "**/result/**",
      "**/target/**"
    ]
  },
  "tui": {
    "scroll_speed": 1.25,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "mcp": {
    "firecrawl": {
      "type": "local",
      "command": ["firecrawl-mcp"],
      "enabled": true,
      "environment": {
        "FIRECRAWL_API_URL": "http://127.0.0.1:3002"
      }
    }
  },
  "autoupdate": "notify",
  "plugin": ["oh-my-opencode"]
}
